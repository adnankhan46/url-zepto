<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <title>URL Shortner</title>
</head>
<body>
    <h1>URL Shortner</h1>
    
<% if(locals.id){  %>
    <p> Generated URL: <a target="_blank" href="http://localhost:3000/url/<%=id%>">http://localhost:3000/url/<%=id%></a> </p>
    <% } %>

    <form action="/url" method="POST">

    <label>Enter Your URL</label>
    <input type="text" name="url" placeholder="https://www.example.com">
    <button type="submit">SUBMIT</button>
</form>

<div>
    <% if(locals.urls){ %>
    <table>
        <thead>
            <th>S. No</th>
            <th>Short Id</th>
            <th>Short URL</th>
            <th>Redirect</th>
            <th>Created By</th>
            <th>Total Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => {  %>
                <tr>
                <td style=" padding: 10px;"><%=   index + 1 %></td>
                <td style=" padding: 10px;"><%= url.shortId %></td>
                <td style=" padding: 10px;">http://localhost:3000/url/<%= url.shortId %></td>
                <td style=" padding: 10px;"><%= url.redirectUrl %></td>
                <td style=" padding: 10px;"><%= url.CreatedBy.name %></td>
                <td style=" padding: 10px;"><%= url.visitedHistory.length %></td>
                </tr>
                <% }); %>
            
        </tbody>
    </table>
    <% } %>

</div>

</body>
</html>